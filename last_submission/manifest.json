{
  "name": "MaminoTe",
  "version": "2.0",
  "manifest_version": 3,
  "description": "翻訳、文字数カウント、ページジャンプ機能を統合したChrome拡張機能。",
  "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "/images/icons.png"
    }
  },
  "icons": {
    "48": "/images/icons.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
