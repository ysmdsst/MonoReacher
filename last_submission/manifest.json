{
    "name": "MonoReacher",
    "version": "1.3",
    "manifest_version": 3,
    "description": "A Chrome extension that counts characters, translates text, and jumps to registered pages.",
    "permissions": ["contextMenus", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "48": "/images/icons.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  